#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void) {

	while(1){

		char input[100];
		printf("\nEnter a command to run: ");
		scanf("%s", input);

		char delim = " ";
		size_t num_args = 1;
		size_t char_ptr_size = sizeof(char *);
		char ** command_args;

		char * token = strtok(input, delim);

		while(token != NULL)
		{
			printf("%s\n", token);
			token = strtok(NULL, delim);
		}
		//execv("/bin/sh", command_tokens);

	}
}

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void) {

	while(1){

		char str[100];
		printf("\nEnter a command to run: ");
		scanf("%s", str);

		size_t num_args = 1;
		size_t char_ptr_size = sizeof(char *)
		char ** command_args;

		command_tokens = strtok(str, " ");
		//execv("/bin/sh", command_tokens);
		printf("%d", sizeof(command_tokens));

		size_t arr_len = sizeof(command_tokens)/sizeof(command_tokens[0]);
		printf("%d", &arr_len);
		for(int i =0;i < arr_len; i++){
			printf("%s", command_tokens[i]);
		}

		printf("You entered %s", str);

	}
}

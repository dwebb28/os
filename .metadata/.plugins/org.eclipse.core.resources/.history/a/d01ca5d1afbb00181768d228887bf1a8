#include <stdio.h>
#include <stdlib.h>

int main(void) {

	while(1){

		char str[100];
		printf("\nEnter a command to run: ");
		scanf("%s", str);

		char * command_tokens;

		command_tokens = stroken(str, " ");
		execv("/bin/sh", command_tokens)

		printf("You entered %s", str);

	}
}
